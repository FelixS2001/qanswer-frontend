<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actvities.Profile.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="goToHomeButtonClicked"
            android:src="@drawable/ic_home_black_24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add_black_24dp"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:onClick="addNewQuestionButtonClicked" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_favorite_black_24dp"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:onClick="showFavoriteQuestionsButtonClicked" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_person_white_24dp"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:onClick="showYourAccountButtonClicked" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_profile_username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Loading"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/linearLayout_profile_questions"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_profile_questionsValue"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@color/grey_background"
                android:gravity="center"
                android:text="-"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/textView_profile_questions"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/grey_background"
                android:gravity="center"
                android:text="Fragen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_profile_answersValue"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@color/grey_background"
                android:gravity="center"
                android:text="-"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/textView_profile_answers"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/grey_background"
                android:gravity="center"
                android:text="Antworten" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_profile_entrydateValue"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@color/grey_background"
                android:gravity="center"
                android:text="-"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_profile_entrydate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/grey_background"
                android:gravity="center"
                android:text="Eintrittsdatum" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
