<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actvities.Questions.ViewQuestionActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/loading_icon"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/gifImageView_viewQuestion_loadingIcon" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout_view_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listView_view_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_add_white_24dp"
        android:tint="@android:color/white"
        android:onClick="addNewAnswerButtonClicked"
        android:layout_margin="16dp" />
</android.support.design.widget.CoordinatorLayout>
